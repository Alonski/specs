#!/bin/bash
#
# A simple utility to convert the mermaid files into images.
#

for filename in diagrams/*.mmd; do
    [ -e "$filename" ] || continue
    mmdc \
        -t neutral \
        -w 2400 \
        -H 1800 \
        -i $filename \
        -b transparent \
        -o build/$(basename "$filename" .mmd).svg
done